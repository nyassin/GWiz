{
  "name" : "SandwichBar",
  "version" : "1.0.1",
  "description" : "Shows an infobar on pages which contain the word 'sandwich'",
  "background" : {
    "scripts": ["background.js"]
  },
  "permissions" : [ "experimental", "contentSettings", "tabs"],
  "icons" : {
    "16" : "sandwich-16.png",
    "48" : "sandwich-48.png",
    "128" : "sandwich-128.png"
  },
  "content_scripts" : [
    {
      "matches" : [ "https://*/*","http://*/*"  ],
      "js": ["jquery-2.0.3.min.js", "contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "browser_action": {
     "default_icon": "sandwich-128.png",
     "default_popup": "infobar.html"
  },
  "manifest_version": 2
}
